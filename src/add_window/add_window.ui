<interface>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Nessun ritardo</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Ritardo di 3 secondi</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Ritard0 di 5 secondi</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Ritardo di 10 secondi</attribute>
      </item>
    </section>
  </menu>

  <!-- interface-name add_window.ui -->
  <template class="AddWindow" parent="GtkApplicationWindow">
    <property name="default-width">400</property>
    <property name="default-height">200</property>
    <property name="title">Screen Grabbing</property>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="headerbar">
        <property name="show-title-buttons">True</property>
      </object>
    </child>
    <child>
      <object class="GtkGrid">
      <property name="column-spacing">3</property>
      <property name="row-spacing">3</property>
        <child type="end">
          <object class="GtkMenuButton" id="delay_opt">
            <property name="menu-model">primary_menu</property>
            <property name="primary">True</property>
            <property name="tooltip-text" translatable="yes">Select delay</property>
            <property name="child">
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">preferences-system-time-symbolic</property>
                    <style>
                      <class name="title"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">pan-down-symbolic</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <child>
          <object class="GtkButton" id="shortcut">
          <property name="label">shortcut</property>
          <layout>
            <property name="column">1</property>
            <property name="row">0</property>
          </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="add_ss">
            <property name="child">
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">list-add-symbolic</property>
                    <style>
                      <class name="title"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label">New Screenshot</property>
                  </object>
                </child>
              </object>
            </property>
            <layout>
              <property name="column">0</property>
              <property name="column-span">3</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkImage" id="image">
          <property name="hexpand">True</property>
          <property name="vexpand">True</property>
          <layout>
            <property name="column">0</property>
            <property name="column-span">3</property>
            <property name="row">2</property>
          </layout>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
